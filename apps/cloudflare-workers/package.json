{
	"name": "@private-landing/cloudflare-workers",
	"version": "1.0.0",
	"description": "Example Cloudflare Workers implementation with authentication",
	"license": "Apache-2.0",
	"author": "Josh Habdas <josh@comfus.io>",
	"homepage": "https://github.com/vhscom/private-landing/",
	"repository": {
		"type": "git",
		"url": "https://github.com/vhscom/private-landing",
		"directory": "apps/cloudflare-workers"
	},
	"keywords": [
		"cloudflare-workers",
		"authentication",
		"api",
		"example"
	],
	"private": true,
	"type": "module",
	"engines": {
		"node": ">=18.0.0"
	},
	"scripts": {
		"clean": "rm -rf .wrangler",
		"check": "biome check && bun run typecheck",
		"build": "echo 'Skipping workers build during main build pass...'",
		"dev": "wrangler dev --port 8788",
		"wrangler:build": "wrangler deploy --dry-run --outdir=.wrangler/dist",
		"deploy": "bun run check && wrangler deploy --minify",
		"db:backup": "src/db/scripts/backup.sh",
		"db:migrate": "turso src/db shell private-landing-db < src/db/migrations/001_password_consolidation.sql",
		"db:migrate-safe": "src/db/scripts/migrate-safe.sh",
		"db:reset": "turso src/db shell private-landing-db < db/scripts/reset.sql && turso db shell private-landing-db < src/db/schema/sql/schema.sql",
		"format": "biome check --write .",
		"format:shell": "shfmt -w src/db/scripts/*.sh",
		"lint": "biome lint",
		"test": "vitest",
		"test:run": "vitest run --retry 3",
		"typecheck": "tsc --noEmit",
		"typegen": "wrangler types"
	},
	"dependencies": {
		"@libsql/client": "^0.15.0",
		"@private-landing/core": "workspace:*",
		"@private-landing/infrastructure": "workspace:*",
		"@private-landing/schemas": "workspace:*",
		"@private-landing/types": "workspace:*",
		"hono": "^4.11.5",
		"nanoid": "^5.1.2",
		"zod": "^4.3.5"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.12",
		"@cloudflare/vitest-pool-workers": "^0.12.6",
		"@cloudflare/workers-types": "^4.20260124.0",
		"@types/bun": "^1.3.6",
		"@types/nanoid": "^3.0.0",
		"typescript": "^5.8.2",
		"vitest": "~3.2.x",
		"wrangler": "^4.60.0"
	}
}
