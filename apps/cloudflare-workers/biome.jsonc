{
	"root": false,
	"$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
	"extends": ["../../biome.jsonc"],
	"files": {
		"includes": [
			"!!**/.wrangler",
			"!!**/dist",
			"!**/worker-configuration.d.ts",
			"!!**/node_modules"
		]
	},
	"overrides": [
		{
			"includes": ["public/**/*.html"],
			"linter": {
				"rules": {
					"complexity": {
						// !important is correct for prefers-reduced-motion overrides
						"noImportantStyles": "off"
					}
				}
			}
		}
	]
}
