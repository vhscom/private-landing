{
	"name": "@private-landing/root",
	"private": true,
	"workspaces": ["packages/*", "apps/*"],
	"scripts": {
		"build": "bun run --filter '@private-landing/*' build",
		"build:packages": "bun run --filter './packages/*' build",
		"clean": "bun run --filter '@private-landing/*' clean",
		"dev": "bun run --filter '@private-landing/react-router' dev",
		"format": "biome check --write .",
		"format:packages": "biome check --write packages",
		"test": "bun run --filter '@private-landing/react-router' test",
		"typecheck": "bun run --filter '@private-landing/*' typecheck"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4"
	},
	"engines": {
		"node": ">=18.0.0",
		"bun": ">=1.0.0"
	},
  	"license": "Apache-2.0"
}
