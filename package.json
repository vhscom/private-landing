{
	"name": "@private-landing/root",
	"version": "1.0.0",
	"description": "Private Landing â€” Authentication Reference",
	"license": "Apache-2.0",
	"homepage": "https://github.com/vhscom/private-landing/",
	"repository": {
		"type": "git",
		"url": "https://github.com/vhscom/private-landing",
		"directory": "."
	},
	"keywords": [
		"authentication",
		"cloudflare-workers",
		"typescript",
		"launchpad"
	],
	"private": true,
	"workspaces": ["packages/*", "apps/*"],
	"engines": {
		"node": ">=24.0.0",
		"bun": ">=1.0.0"
	},
	"scripts": {
		"clean": "bun run --filter '@private-landing/*' clean",
		"build": "bun run --filter '@private-landing/*' build && bun run build:workers",
		"build:workers": "bun run --filter '@private-landing/cloudflare-workers' wrangler:build",
		"dev": "bun run --filter '@private-landing/cloudflare-workers' dev",
		"test": "bun run test:workers",
		"test:workers": "bun run --filter '@private-landing/cloudflare-workers' test",
		"typecheck": "bun run --filter '@private-landing/*' typecheck",
		"format": "biome check --write .",
		"format:packages": "biome check --write packages"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4"
	},
	"cloudflare": {
		"bindings": {
			"AUTH_DB_URL": {
				"description": "libSQL database connection string like libsql://your-db.turso.io (Variable or Secret)"
			},
			"AUTH_DB_TOKEN": {
				"description": "libSQL database access token (Secret)"
			},
			"JWT_ACCESS_SECRET": {
				"description": "Generate a random string using `openssl rand -hex 32` (Secret)"
			},
			"JWT_REFRESH_SECRET": {
				"description": "Generate a random string using `openssl rand -hex 32` (Secret)"
			}
		}
	}
}
